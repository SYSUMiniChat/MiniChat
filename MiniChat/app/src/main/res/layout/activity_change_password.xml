<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.caitzh.minichat.changePassword"
    android:orientation="vertical">

    <LinearLayout style="@style/myLinearLayout">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Mini号"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/miniNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="123456789"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <View
        android:id="@+id/view1"
        style="@style/myView"/>

    <LinearLayout style="@style/myLinearLayout">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textSize="18sp"
            android:textColor="@color/colorBlack" />

        <EditText
            android:id="@+id/password"
            style="@style/myEditText"
            android:hint="请填写密码，最长16位"
            android:inputType="textPassword"
            android:maxLength="16"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/visible"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:src="@mipmap/invisible"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <View
        android:id="@+id/view2"
        style="@style/myView"/>

    <LinearLayout
        style="@style/myLinearLayout">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textSize="18sp"
            android:textColor="@color/colorBlack" />

        <EditText
            android:id="@+id/confirmPassword"
            style="@style/myEditText"
            android:hint="再次填写确认"
            android:inputType="textPassword"
            android:maxLength="16"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/confirmVisible"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:src="@mipmap/invisible"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <View
        android:id="@+id/view3"
        style="@style/myView"/>

    <Button
        android:id="@+id/save_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        android:textColor="@color/colorWhite"
        android:background="@color/colorGreen"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>

</LinearLayout>
